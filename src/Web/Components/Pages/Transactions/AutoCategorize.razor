@page "/transactions/autocategorize"
@using Microsoft.AspNetCore.Components
@using LocalFinanceManager.Application.Interfaces
@using LocalFinanceManager.Domain.Entities
@inject IAccountRepository AccountRepository
@inject ITransactionService TransactionService
@inject IScoringEngine ScoringEngine
@inject IConfiguration Configuration
@rendermode InteractiveServer

<h1>Auto-Categorize Transactions</h1>

<div class="mb-3">
    <label for="accountSelect" class="form-label">Select Account:</label>
    <select id="accountSelect" class="form-select" @onchange="OnAccountChanged">
        <option value="">-- Select an Account --</option>
        @foreach (var account in accounts)
        {
            <option value="@account.Id">@account.Name (@account.AccountType)</option>
        }
    </select>
</div>

@if (!selectedAccountId.HasValue)
{
    <div class="alert alert-info">Select an account to begin auto-categorization.</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="RunAutoCategorize">Run Auto-Categorize</button>
    </div>

    @if (isProcessing)
    {
        <div class="alert alert-secondary">Processing... (@processedCount/@toProcessCount)</div>
    }

    @if (transactions != null && transactions.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Current Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in transactions)
                {
                    <tr>
                        <td>@t.Date.ToString("yyyy-MM-dd")</td>
                        <td>@t.Description</td>
                        <td class="text-end">@t.Amount.ToString("C")</td>
                        <td>@(t.Category?.Name ?? "(none)")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowSuggestions(t)">Show
                                Suggestions</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@if (selectedSuggestions != null)
{
    <div class="card mt-3">
        <div class="card-header">Suggestions for: @selectedTransaction?.Description</div>
        <div class="card-body">
            @if (selectedSuggestions.Count == 0)
            {
                <div class="alert alert-info">No suggestions available.</div>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var s in selectedSuggestions)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@s.CategoryName</strong>
                                <div class="text-muted small">Score: @s.Score:F2</div>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-success me-2"
                                    @onclick="() => AssignCategory(selectedTransaction!, s.CategoryId)">Assign</button>
                            </div>
                        </li>
                    }
                </ul>
            }
            <div class="mt-2">
                <button class="btn btn-secondary" @onclick="CloseSuggestions">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private IReadOnlyList<Account> accounts = new List<Account>();
    private IReadOnlyList<Transaction>? transactions;
    private int? selectedAccountId;

    private bool isProcessing = false;
    private int processedCount = 0;
    private int toProcessCount = 0;

    private Transaction? selectedTransaction;
    private IReadOnlyList<CategorySuggestion>? selectedSuggestions;

    private float UncertaintyThreshold => Configuration.GetValue<float>("Scoring:UncertaintyThreshold", 0.6f);

    protected override async Task OnInitializedAsync()
    {
        accounts = await AccountRepository.GetAllAsync();
    }

    private async Task OnAccountChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var accountId))
        {
            selectedAccountId = accountId;
            await LoadTransactions();
        }
        else
        {
            selectedAccountId = null;
            transactions = null;
        }
    }

    private async Task LoadTransactions()
    {
        if (selectedAccountId.HasValue)
        {
            transactions = (await TransactionService.GetByAccountIdAsync(selectedAccountId.Value))
            .Where(t => t != null)
            .ToList();
        }
    }

    private async Task RunAutoCategorize()
    {
        if (!selectedAccountId.HasValue || transactions == null)
            return;

        isProcessing = true;
        processedCount = 0;
        toProcessCount = transactions.Count;

        foreach (var t in transactions)
        {
            // Skip if already categorized
            if (t.CategoryId != 0)
            {
                processedCount++;
                continue;
            }

            var best = await ScoringEngine.GetBestSuggestionAsync(t, UncertaintyThreshold);
            if (best != null)
            {
                t.CategoryId = best.CategoryId;
                await TransactionService.UpdateAsync(t);
            }
            // else leave for manual review; user can click "Show Suggestions"

            processedCount++;
            StateHasChanged();
        }

        isProcessing = false;
        await LoadTransactions();
    }

    private async Task ShowSuggestions(Transaction t)
    {
        selectedTransaction = t;
        selectedSuggestions = await ScoringEngine.GetSuggestionsAsync(t);
    }

    private async Task AssignCategory(Transaction t, int categoryId)
    {
        t.CategoryId = categoryId;
        await TransactionService.UpdateAsync(t);
        selectedSuggestions = null;
        selectedTransaction = null;
        await LoadTransactions();
    }

    private void CloseSuggestions()
    {
        selectedSuggestions = null;
        selectedTransaction = null;
    }
}