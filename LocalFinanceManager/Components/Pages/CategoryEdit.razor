@page "/budgets/{budgetPlanId:guid}/categories/{id:guid}/edit"
@using LocalFinanceManager.Services
@using LocalFinanceManager.DTOs
@using LocalFinanceManager.Models
@using LocalFinanceManager.Components.Shared
@using static LocalFinanceManager.Components.Shared.Breadcrumb
@inject NavigationManager Navigation
@inject CategoryService CategoryService
@inject BudgetPlanService BudgetPlanService
@rendermode InteractiveServer

<PageTitle>Categorie Bewerken</PageTitle>

@if (budgetPlan == null)
{
    <p><em>Budget plan laden...</em></p>
}
else
{
    <Breadcrumb Items="@breadcrumbItems" />

    <h1>Categorie Bewerken</h1>

@if (category == null)
{
    <p><em>Categorie laden...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <EditForm Model="@categoryName" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                @if (!string.IsNullOrEmpty(concurrencyMessage))
                {
                    <div class="alert alert-warning">
                        <p>@concurrencyMessage</p>
                        <button type="button" class="btn btn-sm btn-warning" @onclick="ReloadCategory">
                            Laatste Versie Herladen
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary" @onclick="CancelReload">
                            Annuleren
                        </button>
                    </div>
                }

                <div class="mb-3">
                    <label for="name" class="form-label">Naam</label>
                    <InputText id="name" class="form-control" @bind-Value="categoryName" />
                    @if (validationErrors.ContainsKey("Name"))
                    {
                        <div class="text-danger">@string.Join(", ", validationErrors["Name"])</div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label">Type</label>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="typeIncome" 
                                   checked="@(categoryType == CategoryType.Income)" 
                                   @onclick="@(() => categoryType = CategoryType.Income)" />
                            <label class="form-check-label" for="typeIncome">
                                Inkomsten
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="typeExpense" 
                                   checked="@(categoryType == CategoryType.Expense)" 
                                   @onclick="@(() => categoryType = CategoryType.Expense)" />
                            <label class="form-check-label" for="typeExpense">
                                Uitgaven
                            </label>
                        </div>
                    </div>
                    @if (validationErrors.ContainsKey("Type"))
                    {
                        <div class="text-danger">@string.Join(", ", validationErrors["Type"])</div>
                    }
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span> Opslaan...</span>
                        }
                        else
                        {
                            <span>Wijzigingen Opslaan</span>
                        }
                    </button>
                    <a href="/budgets/@BudgetPlanId/edit" class="btn btn-secondary">Annuleren</a>
                </div>
            </EditForm>
        </div>
    </div>
}
}

@code {
    [Parameter]
    public Guid BudgetPlanId { get; set; }

    [Parameter]
    public Guid Id { get; set; }

    private BudgetPlanDto? budgetPlan;
    private CategoryDto? category;
    private List<BreadcrumbItem> breadcrumbItems = new();
    private string categoryName = string.Empty;
    private CategoryType categoryType = CategoryType.Expense;
    private byte[]? originalRowVersion;
    private Dictionary<string, string[]> validationErrors = new();
    private string? errorMessage;
    private string? concurrencyMessage;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadBudgetPlan();
        await LoadCategory();
    }

    private async Task LoadBudgetPlan()
    {
        try
        {
            budgetPlan = await BudgetPlanService.GetByIdAsync(BudgetPlanId);
            if (budgetPlan == null)
            {
                errorMessage = "Budget plan niet gevonden.";
                return;
            }

            breadcrumbItems = new List<BreadcrumbItem>
            {
                new BreadcrumbItem("Budget Plans", "/budgets"),
                new BreadcrumbItem(budgetPlan.Name, $"/budgets/{BudgetPlanId}/edit"),
                new BreadcrumbItem("CategorieÃ«n", null),
                new BreadcrumbItem("Bewerken", null)
            };
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij laden van budget plan: {ex.Message}";
        }
    }

    private async Task LoadCategory()
    {
        try
        {
            category = await CategoryService.GetByIdAsync(Id);
            if (category == null)
            {
                errorMessage = "Categorie niet gevonden.";
                return;
            }

            // Verify category belongs to this budget plan
            if (category.BudgetPlanId != BudgetPlanId)
            {
                errorMessage = "Deze categorie behoort niet tot dit budget plan.";
                return;
            }

            categoryName = category.Name;
            categoryType = category.Type;
            originalRowVersion = category.RowVersion;
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij laden van categorie: {ex.Message}";
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;
        concurrencyMessage = null;
        validationErrors.Clear();

        try
        {
            // Create request with the RowVersion from when we loaded the page
            var updateRequest = new UpdateCategoryDto
            {
                Name = categoryName,
                Type = categoryType,
                RowVersion = originalRowVersion
            };

            var response = await CategoryService.UpdateAsync(Id, updateRequest);
            if (response != null)
            {
                Navigation.NavigateTo($"/budgets/{BudgetPlanId}/edit");
            }
            else
            {
                errorMessage = "Fout bij bijwerken van categorie.";
            }
        }
        catch (HttpRequestException ex) when (ex.Message.Contains("409"))
        {
            // Handle concurrency conflict
            concurrencyMessage = "De categorie is gewijzigd door een ander proces. Wilt u de laatste versie herladen?";
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij bijwerken van categorie: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task ReloadCategory()
    {
        concurrencyMessage = null;
        await LoadCategory();
    }

    private void CancelReload()
    {
        Navigation.NavigateTo($"/budgets/{BudgetPlanId}/edit");
    }
}
