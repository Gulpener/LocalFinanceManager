@page "/budgets/{Id:guid}/edit"
@using LocalFinanceManager.Services
@using LocalFinanceManager.DTOs
@using LocalFinanceManager.Components.Shared
@using Microsoft.EntityFrameworkCore
@inject BudgetPlanService BudgetPlanService
@inject CategoryService CategoryService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Edit Budget Plan</PageTitle>

@if (budgetPlan == null)
{
    <p><em>Loading budget plan...</em></p>
}
else
{
    <h1>Edit Budget Plan: @budgetPlan.Name (@budgetPlan.Year)</h1>

    <div class="card mb-3">
        <div class="card-header">
            <h5>Plan Details</h5>
        </div>
        <div class="card-body">
            <EditForm Model="@updateModel" OnValidSubmit="HandleUpdatePlan">
                <div class="row">
                    <div class="col-md-8">
                        <label for="name" class="form-label">Plan Name</label>
                        <InputText id="name" class="form-control" @bind-Value="updateModel.Name" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">Update Name</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(planErrorMessage))
                {
                    <div class="alert alert-danger mt-2">@planErrorMessage</div>
                }
            </EditForm>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Categories</h5>
            <a href="/budgets/@Id/categories/new" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
        </div>
        <div class="card-body">
            @if (categories == null)
            {
                <p><em>Loading categories...</em></p>
            }
            else if (!categories.Any())
            {
                <div class="alert alert-info">No categories yet. Click "Add Category" to create one.</div>
            }
            else
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in categories)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@(category.Type == LocalFinanceManager.Models.CategoryType.Income ? "Inkomsten" : "Uitgaven")</td>
                                <td>
                                    <a href="/budgets/@Id/categories/@category.Id/edit" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ArchiveCategory(category.Id)">
                                        <i class="bi bi-archive"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Budget Lines</h5>
            <button class="btn btn-sm btn-primary" @onclick="ShowAddLineForm">
                <i class="bi bi-plus-circle"></i> Add Budget Line
            </button>
        </div>
        <div class="card-body">
            @if (showAddLineForm)
            {
                <div class="card mb-3 border-primary">
                    <div class="card-header bg-primary text-white">New Budget Line</div>
                    <div class="card-body">
                        <EditForm Model="@newLineModel" OnValidSubmit="HandleAddLine">
                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <CategorySelector BudgetPlanId="@Id" 
                                                SelectedCategoryId="newLineModel.CategoryId"
                                                SelectedCategoryIdChanged="EventCallback.Factory.Create<Guid?>(this, value => newLineModel.CategoryId = value ?? Guid.Empty)"
                                                IsRequired="true"
                                                AllowEmpty="true" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Monthly Amounts (or enter uniform value)</label>
                                <div class="input-group mb-2">
                                    <span class="input-group-text">Uniform Value</span>
                                    <input type="number" class="form-control" @bind="uniformAmount" step="0.01" />
                                    <button type="button" class="btn btn-secondary" @onclick="ApplyUniformAmount">
                                        Apply to All Months
                                    </button>
                                </div>
                                <div class="row g-2">
                                    @for (int i = 0; i < 12; i++)
                                    {
                                        var monthIndex = i;
                                        <div class="col-md-2">
                                            <label class="form-label small">@GetMonthName(i)</label>
                                            <input type="number" class="form-control form-control-sm"
                                                @bind="newLineMonthlyAmounts[monthIndex]" step="0.01" />
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Notes</label>
                                <InputText class="form-control" @bind-Value="newLineModel.Notes" />
                            </div>
                            @if (!string.IsNullOrEmpty(lineErrorMessage))
                            {
                                <div class="alert alert-danger">@lineErrorMessage</div>
                            }
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Add Line</button>
                                <button type="button" class="btn btn-secondary" @onclick="CancelAddLine">Cancel</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }

            @if (budgetPlan.BudgetLines.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Category</th>
                                @for (int i = 0; i < 12; i++)
                                {
                                    <th class="text-end">@GetMonthAbbr(i)</th>
                                }
                                <th class="text-end">Year Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in budgetPlan.BudgetLines)
                            {
                                @if (_editingLineId == line.Id)
                                {
                                    <tr class="table-warning">
                                        <td>
                                            <CategorySelector BudgetPlanId="@Id" 
                                                            SelectedCategoryId="_editCategoryId"
                                                            SelectedCategoryIdChanged="EventCallback.Factory.Create<Guid?>(this, value => _editCategoryId = value ?? Guid.Empty)"
                                                            AllowEmpty="false"
                                                            CssClass="" />
                                        </td>
                                        @for (int i = 0; i < 12; i++)
                                        {
                                            var monthIndex = i;
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-end" 
                                                    @bind="_editMonthlyAmounts[monthIndex]" step="0.01" />
                                            </td>
                                        }
                                        <td class="text-end fw-bold">@_editMonthlyAmounts.Sum().ToString("F2")</td>
                                        <td>
                                            <div class="d-flex gap-1">
                                                <button class="btn btn-sm btn-success" @onclick="SaveLine">
                                                    <i class="bi bi-check"></i>
                                                </button>
                                                <button class="btn btn-sm btn-secondary" @onclick="CancelEditLine">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="table-warning">
                                        <td colspan="15">
                                            <div class="row g-2">
                                                <div class="col-md-4">
                                                    <label class="form-label small">Notes</label>
                                                    <input type="text" class="form-control form-control-sm" @bind="_editNotes" />
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-check mt-4">
                                                        <input type="checkbox" class="form-check-input" id="uniformCheckbox-@line.Id" 
                                                            @bind="_useUniformAmount" />
                                                        <label class="form-check-label" for="uniformCheckbox-@line.Id">
                                                            Uniform bedrag
                                                        </label>
                                                    </div>
                                                </div>
                                                @if (_useUniformAmount)
                                                {
                                                    <div class="col-md-4">
                                                        <label class="form-label small">Uniform Value</label>
                                                        <input type="number" class="form-control form-control-sm" 
                                                            @bind="_uniformAmount" @bind:event="oninput" 
                                                            @onchange="ApplyUniformAmountToEdit" step="0.01" />
                                                    </div>
                                                }
                                            </div>
                                            @if (!string.IsNullOrEmpty(editLineErrorMessage))
                                            {
                                                <div class="alert alert-danger alert-sm mt-2 mb-0">@editLineErrorMessage</div>
                                            }
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>@line.CategoryName</td>
                                        @for (int i = 0; i < 12; i++)
                                        {
                                            <td class="text-end">@line.MonthlyAmounts[i].ToString("F2")</td>
                                        }
                                        <td class="text-end fw-bold">@line.YearTotal.ToString("F2")</td>
                                        <td>
                                            <div class="d-flex gap-1">
                                                <button class="btn btn-sm btn-primary" @onclick="() => StartEditLine(line)">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" @onclick="() => ArchiveLine(line.Id)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            <tr class="table-secondary fw-bold">
                                <td>TOTAL</td>
                                @for (int i = 0; i < 12; i++)
                                {
                                    var monthTotal = budgetPlan.BudgetLines.Sum(l => l.MonthlyAmounts[i]);
                                    <td class="text-end">@monthTotal.ToString("F2")</td>
                                }
                                <td class="text-end">@budgetPlan.BudgetLines.Sum(l => l.YearTotal).ToString("F2")</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No budget lines yet. Click "Add Budget Line" to create one.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-secondary" @onclick="GoBack">Back to Budget Plans</button>
    </div>
}

@if (_showConflictDialog)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Concurrency Conflict</h5>
                    <button type="button" class="btn-close" @onclick="CloseConflictDialog"></button>
                </div>
                <div class="modal-body">
                    <p>De budgetregel is gewijzigd door een ander proces.</p>
                    <p>Wilt u de laatste versie herladen? (Uw wijzigingen gaan verloren.)</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="ReloadBudgetPlan">Herladen</button>
                    <button type="button" class="btn btn-secondary" @onclick="CloseConflictDialog">Annuleer</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private BudgetPlanDto? budgetPlan;
    private List<CategoryDto>? categories;
    private UpdateBudgetPlanDto updateModel = new();
    private CreateBudgetLineDto newLineModel = new();
    private decimal[] newLineMonthlyAmounts = new decimal[12];
    private decimal uniformAmount = 0;
    private bool showAddLineForm = false;
    private string? planErrorMessage;
    private string? lineErrorMessage;
    
    // Edit mode state
    private Guid? _editingLineId = null;
    private BudgetLineDto? _editingLineSnapshot = null;
    private decimal[] _editMonthlyAmounts = new decimal[12];
    private Guid _editCategoryId;
    private string? _editNotes;
    private bool _useUniformAmount = false;
    private decimal _uniformAmount = 0;
    private string? editLineErrorMessage;
    private bool _showConflictDialog = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadBudgetPlan();
        await LoadCategories();
    }

    private async Task LoadBudgetPlan()
    {
        budgetPlan = await BudgetPlanService.GetByIdAsync(Id);
        if (budgetPlan != null)
        {
            updateModel = new UpdateBudgetPlanDto
            {
                Name = budgetPlan.Name,
                RowVersion = budgetPlan.RowVersion
            };
        }
    }

    private async Task LoadCategories()
    {
        // Load categories for the current budget plan (using page parameter Id)
        if (budgetPlan != null)
        {
            categories = await CategoryService.GetByBudgetPlanAsync(Id);
        }
    }

    private async Task HandleUpdatePlan()
    {
        planErrorMessage = null;
        try
        {
            await BudgetPlanService.UpdateAsync(Id, updateModel);
            await LoadBudgetPlan();
        }
        catch (Exception ex)
        {
            planErrorMessage = ex.Message;
        }
    }

    private void ShowAddLineForm()
    {
        showAddLineForm = true;
        newLineModel = new CreateBudgetLineDto { BudgetPlanId = Id };
        newLineMonthlyAmounts = new decimal[12];
        uniformAmount = 0;
    }

    private void CancelAddLine()
    {
        showAddLineForm = false;
        lineErrorMessage = null;
    }

    private void ApplyUniformAmount()
    {
        for (int i = 0; i < 12; i++)
        {
            newLineMonthlyAmounts[i] = uniformAmount;
        }
    }

    private async Task HandleAddLine()
    {
        lineErrorMessage = null;
        try
        {
            newLineModel = newLineModel with { MonthlyAmounts = newLineMonthlyAmounts };
            await BudgetPlanService.CreateLineAsync(newLineModel);
            await LoadBudgetPlan();
            showAddLineForm = false;
        }
        catch (Exception ex)
        {
            lineErrorMessage = ex.Message;
        }
    }

    private async Task ArchiveLine(Guid lineId)
    {
        await BudgetPlanService.ArchiveLineAsync(lineId);
        await LoadBudgetPlan();
    }

    private async Task ArchiveCategory(Guid categoryId)
    {
        try
        {
            await CategoryService.ArchiveAsync(categoryId);
            await LoadCategories();
        }
        catch (Exception ex)
        {
            planErrorMessage = $"Fout bij archiveren van categorie: {ex.Message}";
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/budgets");
    }

    private string GetMonthName(int index) => new DateTime(2000, index + 1, 1).ToString("MMMM");
    private string GetMonthAbbr(int index) => new DateTime(2000, index + 1, 1).ToString("MMM");

    private void StartEditLine(BudgetLineDto line)
    {
        _editingLineId = line.Id;
        _editingLineSnapshot = line;
        _editMonthlyAmounts = line.MonthlyAmounts.ToArray();
        _editCategoryId = line.CategoryId;
        _editNotes = line.Notes;
        _useUniformAmount = false;
        _uniformAmount = 0;
        editLineErrorMessage = null;
    }

    private void CancelEditLine()
    {
        _editingLineId = null;
        _editingLineSnapshot = null;
        editLineErrorMessage = null;
        _useUniformAmount = false;
        _uniformAmount = 0;
    }

    private void ApplyUniformAmountToEdit()
    {
        if (_useUniformAmount)
        {
            for (int i = 0; i < 12; i++)
            {
                _editMonthlyAmounts[i] = _uniformAmount;
            }
        }
    }

    private async Task SaveLine()
    {
        if (_editingLineId == null || _editingLineSnapshot == null)
        {
            return;
        }

        editLineErrorMessage = null;
        try
        {
            var updateDto = new UpdateBudgetLineDto
            {
                CategoryId = _editCategoryId,
                MonthlyAmounts = _editMonthlyAmounts,
                Notes = _editNotes,
                RowVersion = _editingLineSnapshot.RowVersion
            };

            await BudgetPlanService.UpdateLineAsync(_editingLineId.Value, updateDto);
            await LoadBudgetPlan();
            CancelEditLine();
        }
        catch (DbUpdateConcurrencyException)
        {
            _showConflictDialog = true;
        }
        catch (Exception ex)
        {
            editLineErrorMessage = ex.Message;
        }
    }

    private async Task ReloadBudgetPlan()
    {
        await LoadBudgetPlan();
        CancelEditLine();
        _showConflictDialog = false;
    }

    private void CloseConflictDialog()
    {
        _showConflictDialog = false;
    }
}