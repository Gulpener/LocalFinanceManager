{
  "ConnectionStrings": {
    "Default": "Data Source=localfinancemanager.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ImportOptions": {
    "BatchSize": 1000,
    "MaxFileSizeMB": 100,
    "TimeoutSecondsPerBatch": 60,
    "FuzzyMatchThreshold": 0.65
  },
  "MLOptions": {
    "MinLabeledExamplesPerCategory": 10,
    "TrainingWindowDays": 90,
    "RetrainingScheduleCron": "0 2 * * 0",
    "TopFeaturesCount": 3,
    "MinF1ScoreForApproval": 0.85,
    "NumberOfTrees": 100,
    "NumberOfLeaves": 20,
    "MinimumExampleCountPerLeaf": 10,
    "LearningRate": 0.2
  },
  "AutomationOptions": {
    "ConfidenceThreshold": 0.85,
    "RetrainingScheduleCron": "0 2 * * 0",
    "AutoApplyScheduleCron": "0 6 * * *",
    "UndoRetentionDays": 30,
    "UndoRateAlertThreshold": 0.20,
    "MaxRetries": 5,
    "AutoApplyEnabled": false,
    "BatchSize": 100
  }
}
